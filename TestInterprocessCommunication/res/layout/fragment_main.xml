<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_start_one_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_start_one_activity" />

    <Button
        android:id="@+id/bt_start_two_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_start_two_activity" />

    <TextView android:id="@+id/tv_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <Button android:id="@+id/bt_read_or_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_write_object"/>
</LinearLayout>